<%- include('./partials/navbar') %>
<%- include('./layouts/boilerplate') %>
<head>
   <title><%= post.title %></title>
   <link rel="stylesheet" href="/css/post.css">
</head>
<body>
  <div class="container mt-4 content">
    <h5 class="card-title"><%= post.title %></h5>
    <div class="content-container">
      <div class="card-img-box">
        <img src="/uploads/<%= post.image %>" class="card-img img-fluid" alt="<%= post.title %>">
      </div>
      <div class="card-content">
        <p class="card-text"><%= post.content %></p>
        
        <% if (admin) { %>
          <!-- Edit Button -->
          <a href="/posts/<%= post._id %>/edit" class="btn btn-primary">Edit</a>

          <!-- Delete Button -->
          <form action="/posts/<%= post._id %>?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        <% } %>
        
      </div>
    </div>
  </div>
  <!-- Comment section -->
  <div class="comments mt-4">
    <h5>Comments</h5>
    <ul class="list-group">
      <% post.comments.forEach(comment => { %>
        <li class="list-group-item">
          <strong><%= comment.user.name %>:</strong> <%= comment.content %>
          <span class="text-muted float-right"><%= new Date(comment.timestamp).toLocaleString() %></span>
        </li>
      <% }) %>
    </ul>
    
    <% if (user) { %>
      <form action="/posts/<%= post._id %>/comments" method="POST" class="mt-3">
        <div class="form-group">
          <label for="content">Add a comment:</label>
          <textarea class="form-control" id="content" name="content" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    <% } else { %>
      <p class="mt-3">Please <a href="/login">log in</a> to add a comment.</p>
    <% } %>
  </div>
</div>
  <%- include('./partials/footer') %>
</body>








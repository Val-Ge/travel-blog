<%- include('./partials/navbar') %>
<%- include('./layouts/boilerplate') %>
<head>
   <title>Travel Blog</title>
   <style>
       .card-img {
           width: 100%;
           height: 200px; /* Set a fixed height */
           object-fit: cover; /* Ensure the image covers the entire space */
       }
   </style>
</head>
<body>
  <h1 class="text-center mt-4 mb-4">Travel Blog</h1>
  <div class="container">
    <div class="row">
      <% posts.forEach(post => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <img src="/uploads/<%= post.image %>" class="card-img-top card-img" alt="<%= post.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"><%= post.content.split(' ').slice(0, 12).join(' ') %>...</p>
              <!-- <p class="card-text"><%= post.content%>...</p> -->
              <a href="/posts/<%= post._id %>" class="btn btn-primary">Read More</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
<%- include('./partials/footer') %>

